extends layout

block content
  
  h2 Lista de profesores que imparten:
  div(class='well')
   form(method='post')
    table(class='table')
      tr
        th Id
        th Nombre profesor
        th Horas
        th Fecha de Inicio
        th Fecha de Fin
        th Asignatura
        th Actualizar
      each impartir in asignaciones
        
        tr
          td #{impartir.id}
          td #{impartir.profesor.nombre}
          td #{impartir.horas}
          td #{impartir.fecha_ini}
          td #{impartir.fecha_fin}
          td #{impartir.asignatura.nombre}
          td
             Button(type="submit" name="_id" value="#{impartir._id}" class="btn btn-primary") Actualizar